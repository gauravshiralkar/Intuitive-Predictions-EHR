<!-- Page Content -->
<div class="container">

	<!-- Features Section -->
	<div class="row">
		<div class="col-lg-12"><div id="chartdiv"></div>
			
		</div>
	</div>
	<!-- /.row -->

	<div class="row">
		<div class="col-md-6">
			<div id="mapdiv" style="width:100%; height: 400px;"></div>
		</div>
		
	</div>
	
