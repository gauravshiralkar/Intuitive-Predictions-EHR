<!DOCTYPE html>
<% include template %>
<meta charset="utf-8">
<head>
<style>
#chartdiv {
	width		: 100%;
	height		: 500px;
	font-size	: 11px;
}		
</style>

<script type="text/javascript" src="http://www.amcharts.com/lib/3/amcharts.js"></script>
<script type="text/javascript" src="http://www.amcharts.com/lib/3/serial.js"></script>
<script type="text/javascript" src="http://www.amcharts.com/lib/3/themes/none.js"></script>



<script>


var chart = AmCharts.makeChart("chartdiv", {
	"type": "serial",
	"pathToImages": "http://cdn.amcharts.com/lib/3/images/",
	"categoryField": "companyName",
	"rotate": true,
	"startDuration": 1,
	"categoryAxis": {
		"gridPosition": "start",
		"position": "left"
	},
	"trendLines": [],
	"graphs": [
		{
			"balloonText": "fullTime:[[value]]",
			"fillAlphas": 0.8,
			"id": "AmGraph-1",
			"lineAlpha": 0.2,
			"title": "fullTime",
			"type": "column",
			"valueField": "fullTime"
		},
		{
			"balloonText": "internship:[[value]]",
			"fillAlphas": 0.8,
			"id": "AmGraph-2",
			"lineAlpha": 0.2,
			"title": "internship",
			"type": "column",
			"valueField": "internship"
		}
	],
	"guides": [],
	"valueAxes": [
		{
			"id": "ValueAxis-1",
			"position": "top",
			"axisAlpha": 0
		}
	],
	"allLabels": [ ],
	"amExport": {
		"right": 20,
		"top": 20
	},
	"balloon": {},
	"titles": [],
	"dataProvider": [ { "internship": 330,companyName: 'adobe', "fullTime": 34 },
	                  { "internship": 114, companyName: 'Amazon', "fullTime": 108 },
	             
	                  { "internship": 610, companyName: 'ebay', "fullTime": 512 },
	                  { "internship": 240, companyName: 'facebook',"fullTime": 216 },
	                  { "internship": 211, companyName: 'google', "fullTime": 702 },
	                 
	                  { "internship": 522,  companyName: 'microsoft', "fullTime":455 }]	                  
});


</script>

